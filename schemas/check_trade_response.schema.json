{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gradient-bang.dev/schemas/check_trade_response.schema.json",
  "title": "CheckTradeResponse",
  "type": "object",
  "required": [
    "can_trade",
    "current_credits",
    "current_cargo",
    "cargo_capacity",
    "cargo_used"
  ],
  "properties": {
    "can_trade": { "type": "boolean" },
    "price_per_unit": { "type": "integer", "minimum": 0 },
    "total_price": { "type": "integer", "minimum": 0 },
    "error": { "type": "string" },
    "current_credits": { "type": "integer" },
    "current_cargo": {
      "type": "object",
      "additionalProperties": { "type": "integer" }
    },
    "cargo_capacity": { "type": "integer", "minimum": 0 },
    "cargo_used": { "type": "integer", "minimum": 0 }
  },
  "additionalProperties": false
}
